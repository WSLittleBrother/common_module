<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_charater"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/item_cicle_icon_bg"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/text_color_lightgray"
            android:textSize="@dimen/x50" />

        <CheckBox
            android:theme="@style/Theme.AppCompat.Light"
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x100"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x16"
            android:clickable="false"
            android:scaleX="0.7"
            android:textSize="@dimen/x32"
            android:scaleY="0.7"
            android:focusable="false"/>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/checkbox"
            android:layout_toRightOf="@id/tv_charater"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="214214"
                android:textColor="@color/text_color_darkgray"
                android:textSize="@dimen/font_normal"
                android:ellipsize="end"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="sunway公司"
                android:textColor="@color/text_color_lightgray"
                android:textSize="@dimen/font_small" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="sunway公司"
                    android:textColor="@color/text_color_lightgray"
                    android:textSize="@dimen/font_small" />
                <TextView
                    android:visibility="gone"
                    android:paddingRight="@dimen/dp_10"
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="sunway公司"
                    android:textColor="@color/text_color_lightgray"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>